{
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  },
  "extends": "airbnb-base",
  "rules": {
    "comma-dangle": 0,
    "consistent-return": 0,
    "import/prefer-default-export": 0,
    "linebreak-style": 0,
    "no-bitwise": 0,
    "no-param-reassign": 0,
    "no-unnamed-functions": 0,
    "no-unused-expressions": 0,
    // this is for the tests, don't worrry about it for now
    "import/no-unresolved": 1,
    "import/extensions": 1
  }
}